# Database connection string for Neon PostgreSQL
# This is required for Prisma to work, even if not actively using database features
# Get your database URL from https://neon.tech
# Replace USER, PASSWORD, HOST, and DATABASE with your actual credentials
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require"

# Optional: Set a custom admin password for database seeding
# If not set, the default password "PGVlasta" will be used
# For production deployments, ALWAYS set a secure password!
# ADMIN_PASSWORD="your-secure-password"

# Example for local development (if you don't have a database):
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pgv?sslmode=prefer"
